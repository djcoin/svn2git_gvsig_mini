<?xml version="1.0" encoding="utf-8"?>
<es.prodevelop.gvsig.mini.views.overlay.SlidingDrawer2 xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:id="@+id/SlidingDrawer"
	android:handle="@+id/slideHandleButton" android:content="@+id/contentLayout"
	android:padding="10dip" android:layout_height="250dip">
	<Button android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/slideHandleButton"
		android:background="@drawable/slide_up_icon"></Button>
	<LinearLayout android:id="@+id/contentLayout" android:orientation="vertical"
		android:gravity="center|top" android:padding="10dip"
		android:background="#000000"
		android:layout_height="fill_parent" android:layout_width="fill_parent">
		<include layout="@layout/categories_list_view" android:layout_width="fill_parent"
			android:layout_height="fill_parent"></include>
				
	</LinearLayout>

</es.prodevelop.gvsig.mini.views.overlay.SlidingDrawer2>
